            </column>
            <column name="pancard_number" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="birthdate" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="age" type="integer">
                <constraints nullable="true" />
